#include <iostream>

using namespace std;

int tinggiPiramida;

int main() {

	cout << "Masukan jumlah angka: ";
	cin >> tinggiPiramida;

	for (int i = 1; i <= tinggiPiramida; i++) {

		for (int j = 1; j <= tinggiPiramida - i; j++) {
			cout << " ";
		}

		for (int k = 1; k <= i; k++) {
			cout << " *";
		}
		cout << endl;
	}
	return 0;
}
